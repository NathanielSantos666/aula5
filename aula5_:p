//VARIAVEL CONST :
const variavelA = 100;
const variavelB = variavelA + 50;
const variavelC = variavelA / variavelB;
console.log(variavelA);
console.log(variavelB);
console.log(variavelC);
/*
*     const       [variavel]        =        [100]
*       ^             ^             ^          ^
*  inalteravel     variavel    equivalente   valor
* padrão camelCase para nomear variaveis
*/

//VARIAVEL LET :
let numero = 5;
console.log(numero);
numero = 120 + 5;
console.log(numero);
// let = variavel pode ser alteravel

